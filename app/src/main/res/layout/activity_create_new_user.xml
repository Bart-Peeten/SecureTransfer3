<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_new_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.theappfactory.securetransfer.CreateNewUserActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="86dp"
        android:id="@+id/firstNameEditText"
        android:background="@android:color/darker_gray" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/firstNameEditText"
        android:layout_alignRight="@+id/firstNameEditText"
        android:layout_alignEnd="@+id/firstNameEditText"
        android:layout_marginTop="28dp"
        android:id="@+id/NameEditText"
        android:background="@android:color/darker_gray" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/NameEditText"
        android:layout_alignRight="@+id/NameEditText"
        android:layout_alignEnd="@+id/NameEditText"
        android:layout_marginTop="34dp"
        android:id="@+id/emailEditText"
        android:background="@android:color/darker_gray" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/emailEditText"
        android:layout_alignLeft="@+id/emailEditText"
        android:layout_alignStart="@+id/emailEditText"
        android:layout_marginTop="38dp"
        android:id="@+id/usernamerEditText"
        android:background="@android:color/darker_gray" />

    <TextView
        android:text="Naam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailEditText"
        android:layout_alignRight="@+id/voornaamtextView"
        android:layout_alignEnd="@+id/voornaamtextView"
        android:id="@+id/naamTextView"
        android:height="40dp"
        android:width="100dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/NameEditText" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/usernamerEditText"
        android:layout_alignLeft="@+id/naamTextView"
        android:layout_alignStart="@+id/naamTextView"
        android:id="@+id/emailtextView"
        android:height="40dp"
        android:width="100dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/emailEditText" />

    <TextView
        android:text="UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserNametextView"
        android:height="40dp"
        android:layout_alignBottom="@+id/usernamerEditText"
        android:layout_alignLeft="@+id/emailtextView"
        android:layout_alignStart="@+id/emailtextView"
        android:width="100dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/usernamerEditText" />

    <TextView
        android:text="Voornaam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voornaamtextView"
        android:height="40dp"
        android:width="100dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/firstNameEditText"
        android:layout_above="@+id/NameEditText" />

    <Button
        android:text=" Create User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/usernamerEditText"
        android:layout_alignEnd="@+id/usernamerEditText"
        android:layout_marginBottom="52dp"
        android:id="@+id/createbutton"
        android:onClick="createUserButtonClick"/>

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelbutton"
        android:layout_alignBaseline="@+id/createbutton"
        android:layout_alignBottom="@+id/createbutton"
        android:layout_alignRight="@+id/UserNametextView"
        android:layout_alignEnd="@+id/UserNametextView"
        android:onClick="cancelButtonClick"/>
</RelativeLayout>
